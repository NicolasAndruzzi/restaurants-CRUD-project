extends ../layout

block content
  header gTables
  if authStatus == "1234567890987654321"
    a.logoutButton(href="/authorization/logout") Logout
  else
    a.authButton(href="/authorization") Signup / Login
  a.headerButton(href="/restaurants/new") New Restaurant
  main
    for restaurant in restaurants 
      .box
        img(src='#{restaurant.img}')
        a(href='/restaurants/#{restaurant.id}')= restaurant.name
        .info
          div #{restaurant.cuisine} Cuisine
          div #{restaurant.city}, #{restaurant.state}
        .star
          div #{restaurant.rating}
