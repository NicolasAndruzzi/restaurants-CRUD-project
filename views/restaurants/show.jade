extends ../layout

block content
  header 
    a(href='/restaurants/') #{restaurant.name}
  if authStatus
    a.logoutButton(href="/authorization/logout") Logout
  else
    a.authButton(href="/authorization") Signup / Login
  a.headerButton(href="/restaurants/") All Restaurants
  main
    img.showImg(src="#{restaurant.img}")
    .showInfo
      div #{restaurant.cuisine} Cuisine
      div.loc Located in:
        a.location(href='/restaurants/'+restaurant.id+'/map') #{restaurant.city}, #{restaurant.state}
      br
      p #{restaurant.description}
      p Rating: #{restaurant.rating}
      a.editB(href='/restaurants/'+restaurant.id+'/edit') Edit
      a.deleteB(href='/restaurants/'+restaurant.id+'/delete') Delete
      a.addReview(href='/restaurants/'+restaurant.id+'/reviews/new') Add Review
    a.addEmployee(href='/restaurants/'+restaurant.id+'/employees/new') Add Employee
    .employees
      table(border='0')
        thead
          tr
            th First Name
            th Last Name
            th Position
        tbody
          //- each item, i in items
          //-   tr
          //-     td= i+1
          //-     td= item.code
          //-     td= item.name
          //-     td= item.description      
      h4 Employees for #{restaurant.name}
    .reviews
      h4 Reviews for #{restaurant.name}
